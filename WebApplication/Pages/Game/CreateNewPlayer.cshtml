@page
@model WebApplication.Pages.Game.CreateNewPlayer


<!DOCTYPE html>

<div id="gameContainer">
    <div class="container">
        <h1>
            Write first and second player names
        </h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstPlayerName">First player name</label>
                <input asp-for="FirstPlayerName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="SecondPlayerName">Second player name</label>
                <input asp-for="SecondPlayerName" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary btn-block mb-5">Add players</button>
        </form>
        @if (Model.Messages.Count > 0)
        {
            foreach (var message in Model.Messages)
            {
                <div class="alert alert-danger">
                    <span>@message</span>
                </div> 
            }
        }
    </div>
</div>